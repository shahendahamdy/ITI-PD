}

<h2>GetAllCars</h2>

<p>
    @Html.ActionLink("Create New", "AddCar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Num)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manfacture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manfacture)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateCar", new { num=item.Num }) |
            @Html.ActionLink("Details", "SelectCarById", new { num = item.Num /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "DeleteCar", new { num = item.Num /* id=item.PrimaryKey */ })
